<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog</title>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/nav-font.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlog.styles.css" asp-append-version="true" />
</head>
<body style="margin:0px 25%">
    <script src="~/lib/layui/layui.js"></script>
    <header>
        <nav>
            <ul id="nav" class="layui-nav layui-bg-gray layui-font-black">
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="Index" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-home" style="font-size: 20px; color: #1E9FFF;"></i>首页</a></li>
                <li class="layui-nav-item"><a asp-controller="Blog" asp-action="List" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-list" style="font-size: 20px; color: #1E9FFF;"></i>博客</a></li>
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="Life" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-tree" style="font-size: 20px; color: #1E9FFF;"></i>生活</a></li>
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="Frends" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-dialogue" style="font-size: 20px; color: #1E9FFF;"></i>友人</a></li>
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="About" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-about" style="font-size: 20px; color: #1E9FFF;"></i>关于</a></li>
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="Summary" class="layui-font-20 layui-font-black"><i class="layui-icon layui-icon-flag" style="font-size: 20px; color: #1E9FFF;"></i>归档</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
